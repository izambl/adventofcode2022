{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": "./src",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "module": "CommonJS",
    "noImplicitAny": true,
    "noEmit": true,
    "noLib": false,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "target": "es2022"
  },
  "include": ["days/**/*", "common/**/*"],
  "exclude": ["node_modules"]
}
